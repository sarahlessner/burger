<div class="container">
  <div class="jumbotron">
    <h1 class="text-center">Eat All the Burgers</h1>
    <img src="/img/burger.png">
  </div>
</div>

<div class ="container">
  <div class="row">
    <div class="col-sm-7">
      <div class="page-header">
        <h2>Burgers TBD</h2>
      </div>
      <div class="row container-fluid tbd">
        <ul>
          {{#each burgers}}
            {{#unless this.devoured}}
            <div class="row">
              <div class="col-sm-12">
                <li>
                  <div class="burger-name">{{this.name}}</div>
                  <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button type="submit">Nom. Ate it!</button>
                  </form>
                </li>
              </div>
            </div>
            {{/unless}}
          {{/each}}

        </ul>
      </div>
    </div>

    <div class="col-sm-5">
      <div class="page-header">
        <h2>Burgers Devoured</h2>
      </div>
      <div class="row container-fluid devoured">
        <ul>
          {{#each burgers}}
            {{#if this.devoured}}
              <li>
                {{this.name}}
              </li>
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div> 
  </div>
</div>

