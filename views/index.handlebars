<div class="container">
  <div class="jumbotron">
    <h1 class="text-center">Eat All the Burgers</h1>
    <img src="/img/burger.png">
  </div>
</div>


<div class="container tbd">
  <h2>Burgers TBD</h2>

  <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          {{this.name}}
          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">Nom. Ate it!</button>
          </form>
        </li>
      {{/unless}}
    {{/each}}
  </ul>

</div>

<div class="container devoured">
<h2>Burgers Devoured</h2>

  <ul>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.name}}
        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>

<div class="container">

  <h2>Add a Burger</h2>
  <form class="create-update-form" action="/" method="POST">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>



